            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:src="@drawable/main_pic" />
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


    <!--底部导航栏的状态-->
    <include layout="@layout/navigator_bottom"/>
</LinearLayout>
